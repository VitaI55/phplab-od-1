<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="{{ asset('build/style.css') }}" rel="stylesheet"/>
    <title>{% block title %}PHP Lab Group 4{% endblock %}</title>
</head>
<body>

{% block header %}
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-transparent static-top justify-content-between">
                <a class="navbar-brand" href="{{ url('index') }}">
                    <img class="logo"
                         src="{{ asset('img/logo_transparent.png') }}"
                         alt="4-SubGroup logo">
                </a>
                <button class="navbar-toggler hamburger hamburger--spring" type="button"
                        data-toggle="collapse"
                        data-target="#navbarTogglerDemo01"
                        aria-controls="navbarTogglerDemo01"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                  <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                  </span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarTogglerDemo01">
                    <ul class="navbar-nav   ">
                        <li class="nav-item"><a class="nav-link btn btn-warning" href="#">Sign In</a></li>
                        <li class="nav-item" hidden><a class="nav-link btn btn-warning" href="#">Sign Out</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}

<main id="main" class="container body-container text-white">
    {% block main %}{% endblock %}
</main>

{% block footer %}
    <footer class="footer text-white fixed-bottom py-2">
        <div class="container">
            <div class="row">
                <div class="col-12 h-100 text-center">
                    <p>Copyright by {{ block('title') }}</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
